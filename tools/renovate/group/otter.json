{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Group all otter dependencies",
  "packageRules": [
    {
      "groupName": "Otter dependencies",
      "groupSlug": "otter-dependencies",
      "matchPackageNames": [
        "/^@otter/",
        "/^@o3r/",
        "/^@ama-sdk/",
        "/^@o3r-training/",
        "/^@ama-mfe/",
        "/^@ama-mcp/",
        "/^@ama-styling/",
        "/^@ama-openapi/"
      ]
    },
    {
      "matchBaseBranches": [
        "main",
        "master"
      ],
      "matchPackageNames": [
        "/^@otter/",
        "/^@o3r/",
        "/^@ama-sdk/",
        "/^@o3r-training/",
        "/^@ama-mfe/",
        "/^@ama-mcp/",
        "/^@ama-styling/",
        "/^@ama-openapi/"
      ],
      "rangeStrategy": "bump"
    },
    {
      "matchBaseBranches": [
        "/^release/.*/"
      ],
      "matchPackageNames": [
        "/^@otter/",
        "/^@o3r/",
        "/^@ama-sdk/",
        "/^@o3r-training/",
        "/^@ama-mfe/",
        "/^@ama-mcp/",
        "/^@ama-styling/",
        "/^@ama-openapi/"
      ],
      "rangeStrategy": "patch"
    }
  ]
}
