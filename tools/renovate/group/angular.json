{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Group all Angular dependencies",
  "packageRules": [
    {
      "matchPackageNames": [
        "/^@angular/",
        "/^ng-packagr/",
        "/^@schematics/",
        "/angular/",
        "/^@ngrx/",
        "/^zone.js/",
        "/^@nrwl/",
        "/^@nx/",
        "/^nx/",
        "!/@amadeus-it-group/microfrontends-angular/"
      ],
      "groupName": "Angular dependencies",
      "groupSlug": "angular-dependencies"
    },
    {
      "matchPackageNames": ["@angular-devkit/architect"],
      "versioning": "regex:^[~^]?0\\.(?<major>\\d{2})(?<minor>\\d{2})\\.(?<patch>\\d+)$"
    }
  ]
}
