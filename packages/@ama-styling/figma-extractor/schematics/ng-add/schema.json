{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "ngAddSchematicsSchema",
  "title": "Add Otter library",
  "description": "ngAdd Otter library",
  "properties": {
    "projectName": {
      "type": "string",
      "description": "Project name",
      "$default": {
        "$source": "projectName"
      }
    },
    "skipLinter": {
      "type": "boolean",
      "description": "Skip the linter process which includes EsLint and EditorConfig rules applying",
      "default": false
    },
    "skipInstall": {
      "type": "boolean",
      "description": "Skip the install process",
      "default": true
    },
    "exactO3rVersion": {
      "type": "boolean",
      "description": "Use a pinned version for otter packages"
    }
  },
  "required": [
  ]
}
