{
  "extends": "../../../tsconfig.build",
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "sourceMap": false,
    "declarationMap": false,
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "src",
    "skipLibCheck": true, // because of @angular-devkit-schematics
    "tsBuildInfoFile": "build/.tsbuildinfo"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ]
}
