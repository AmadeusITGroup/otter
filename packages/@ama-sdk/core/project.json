{
  "name": "ama-sdk-core",
  "$schema": "https://raw.githubusercontent.com/nrwl/nx/master/packages/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/@ama-sdk/core/src",
  "prefix": "o3r",
  "targets": {
    "build": {
      "executor": "nx:run-script",
      "outputs": [
        "{projectRoot}/dist/package.json"
      ],
      "options": {
        "script": "postbuild"
      },
      "dependsOn": [
        "build-builders",
        "build-esm2020",
        "build-esm2015",
        "build-cjs",
        "build-cli"
      ]
    },
    "build-esm2015": {
      "executor": "nx:run-script",
      "options": {
        "script": "build:esm2015"
      },
      "dependsOn": [
        "build-esm2020"
      ],
      "outputs": [
        "{projectRoot}/dist/esm2015"
      ]
    },
    "build-cjs": {
      "executor": "nx:run-script",
      "options": {
        "script": "build:cjs"
      },
      "dependsOn": [
        "build-esm2020"
      ],
      "outputs": [
        "{projectRoot}/dist/cjs"
      ]
    },
    "build-esm2020": {
      "executor": "nx:run-script",
      "options": {
        "script": "build:esm2020"
      },
      "outputs": [
        "{projectRoot}/dist/src"
      ]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "configurations": {
        "ci": {
          "quiet": true,
          "cacheLocation": ".cache/eslint"
        }
      },
      "options": {
        "eslintConfig": "packages/@ama-sdk/core/.eslintrc.js",
        "lintFilePatterns": [
          "packages/@ama-sdk/core/src/**/*.ts",
          "packages/@ama-sdk/core/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "packages/@ama-sdk/core/jest.config.js",
        "silent": true
      }
    },
    "prepare-publish": {
      "executor": "nx:run-script",
      "options": {
        "script": "prepare:publish"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm publish packages/@ama-sdk/core/dist"
      }
    },
    "prepare-build-builders": {
      "executor": "nx:run-script",
      "options": {
        "script": "prepare:build:builders"
      }
    },
    "build-builders": {
      "executor": "nx:run-script",
      "options": {
        "script": "build:builders"
      }
    },
    "build-cli": {
      "executor": "nx:run-script",
      "options": {
        "script": "build:cli"
      }
    }
  },
  "tags": []
}
