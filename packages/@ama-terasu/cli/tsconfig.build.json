{
  "extends": "../../../tsconfig.build",
  "compilerOptions": {
    "types": ["node"],
    "outDir": "./dist",
    "module": "CommonJS",
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "build/.tsbuildinfo",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": [
    "package.json",
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ]
}
