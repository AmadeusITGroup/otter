{
  "name": "amaterasu-core",
  "$schema": "https://raw.githubusercontent.com/nrwl/nx/master/packages/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/@ama-terasu/core/src",
  "prefix": "o3r",
  "targets": {
    "build": {
      "executor": "nx:run-script",
      "outputs": ["{projectRoot}/dist/package.json"],
      "options": {
        "script": "postbuild"
      },
      "dependsOn": ["compile"]
    },
    "compile": {
      "executor": "nx:run-script",
      "options": {
        "script": "build:source"
      }
    },
    "lint": {},
    "test": {},
    "prepare-publish": {},
    "publish": {}
  },
  "tags": []
}
