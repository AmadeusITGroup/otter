{
  "extends": "../../../tsconfig.build",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "CommonJS",
    "importHelpers": false,
    "composite": true,
    "incremental": true,
    "skipLibCheck": true, // because of @angular-devkit-schematics
    "tsBuildInfoFile": "build/.tsbuildinfo"
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./src/**/templates/"
  ]
}
