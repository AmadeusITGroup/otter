{
  "name": "training-sdk",
  "$schema": "https://raw.githubusercontent.com/nrwl/nx/master/packages/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/@o3r-training/training-sdk/src",
  "prefix": "o3r",
  "targets": {
    "build": {
      "executor": "nx:noop",
      "dependsOn": ["compile", "extract-folder-structure"]
    },
    "compile": {
      "executor": "nx:run-script",
      "options": {
        "script": "build"
      },
      "inputs": ["source", "^cli"]
    },
    "regen": {
      "executor": "nx:run-script",
      "options": {
        "script": "spec:regen"
      }
    },
    "lint": {
      "executor": "nx:run-commands"
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm publish packages/@o3r-training/training-sdk/dist"
      }
    },
    "extract-folder-structure": {
      "cache": true,
      "executor": "nx:run-script",
      "options": {
        "script": "extract"
      },
      "inputs": [
        "source",
        "^cli",
        "{projectRoot}/package.json",
        "{projectRoot}/open-api.yaml"
      ],
      "outputs": ["{projectRoot}/dist/structure"],
      "dependsOn": ["^build", "compile"]
    }
  },
  "tags": ["training"]
}
