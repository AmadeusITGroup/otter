{
  "name": "training-tools",
  "$schema": "https://raw.githubusercontent.com/nrwl/nx/master/packages/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/@o3r-training/training-tools/src",
  "prefix": "o3r",
  "targets": {
    "build": {
      "executor": "nx:run-script",
      "outputs": ["{projectRoot}/dist/package.json"],
      "options": {
        "script": "postbuild"
      },
      "dependsOn": [
        "^build",
        "compile",
        "build-builders",
        "build-cli"
      ]
    },
    "prepare-build-builders": {
      "executor": "nx:run-script",
      "options": {
        "script": "prepare:build:builders"
      }
    },
    "build-builders": {
      "executor": "nx:run-script",
      "options": {
        "script": "build:builders"
      }
    },
    "build-cli": {
      "executor": "nx:run-script",
      "options": {
        "script": "build:cli"
      }
    },
    "compile": {
      "executor": "nx:run-script",
      "options": {
        "script": "build:source"
      }
    },
    "lint": {
      "options": {
        "eslintConfig": "packages/@o3r-training/training-tools/.eslintrc.js",
        "lintFilePatterns": [
          "packages/@o3r-training/training-tools/src/**/*.ts",
          "packages/@o3r-training/training-tools/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "packages/@o3r-training/training-tools/jest.config.js"
      }
    }
  },
  "tags": ["private","showcase"]
}
