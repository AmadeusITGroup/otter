{
  "extends": "../../../tsconfig.build",
  "compilerOptions": {
    "types": ["node"],
    "incremental": true,
    "composite": true,
    "module": "CommonJS",
    "moduleResolution": "node10",
    "outDir": "./dist",
    "rootDir": ".",
    "tsBuildInfoFile": "build/.tsbuildinfo",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/templates/**"
  ],
}
