{
  "name": "forms",
  "$schema": "https://raw.githubusercontent.com/nrwl/nx/master/packages/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/@o3r/forms/src",
  "prefix": "o3r",
  "targets": {
    "build": {
      "executor": "nx:noop",
      "dependsOn": ["build-builders", "compile"]
    },
    "compile": {
      "executor": "@angular-devkit/build-angular:ng-packagr",
      "options": {
        "project": "packages/@o3r/forms/ng-package.json",
        "tsConfig": "packages/@o3r/forms/tsconfig.build.json"
      }
    },
    "lint": {
      "options": {
        "eslintConfig": "packages/@o3r/forms/eslint.config.js",
        "lintFilePatterns": [
          "packages/@o3r/forms/src/**/*.ts",
          "packages/@o3r/forms/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "packages/@o3r/forms/jest.config.js"
      }
    },
    "prepare-publish": {
      "executor": "nx:run-script",
      "options": {
        "script": "prepare:publish"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm publish packages/@o3r/forms/dist"
      }
    },
    "prepare-build-builders": {
      "executor": "nx:run-script",
      "options": {
        "script": "prepare:build:builders"
      }
    },
    "build-builders": {
      "executor": "nx:run-script",
      "options": {
        "script": "build:builders"
      }
    },
    "documentation": {
      "executor": "nx:run-script",
      "options": {
        "script": "compodoc"
      }
    }
  },
  "tags": []
}
