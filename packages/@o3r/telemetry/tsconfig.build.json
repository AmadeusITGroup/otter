{
  "extends": "../../../tsconfig.build",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "outDir": "./dist",
    "module": "CommonJS",
    "rootDir": ".",
    "skipLibCheck": true, // because of @angular-devkit-schematics
    "tsBuildInfoFile": "build/.tsbuildinfo",
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "**/*.spec.ts"
  ]
}
