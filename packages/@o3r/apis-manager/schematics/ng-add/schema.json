{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "ngAddSchematicsSchema",
  "title": "Add Otter library",
  "description": "ngAdd Otter library",
  "properties": {
    "projectName": {
      "type": "string",
      "description": "Project name",
      "$default": {
        "$source": "projectName"
      }
    },
    "skipLinter": {
      "type": "boolean",
      "description": "Skip the linter process",
      "default": false
    },
    "skipInstall": {
      "type": "boolean",
      "description": "Skip the install process",
      "default": true
    },
    "exactO3rVersion": {
      "type": "boolean",
      "description": "Use a pinned version for otter packages",
      "default": false
    },
    "skipCodeSample": {
      "type": "boolean",
      "description": "Skip the code sample generated in application to register the ApiManager (which is relying on FetchApiClient)",
      "default": false
    }
  },
  "required": [
  ]
}
