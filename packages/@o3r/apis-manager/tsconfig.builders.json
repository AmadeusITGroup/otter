{
  "extends": "../../../tsconfig.build",
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "outDir": "./dist",
    "module": "CommonJS",
    "rootDir": ".",
    "types": ["node"],
    "skipLibCheck": true, // because of @angular-devkit-schematics
    "tsBuildInfoFile": "build/.tsbuildinfo.builders"
  },
  "include": [
    "builders/**/*.ts",
    "schematics/**/*.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "builders/**/templates/**",
    "schematics/**/templates/**"
  ]
}
