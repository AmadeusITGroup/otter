{
  "extends": "../../../tsconfig.build",
  "compilerOptions": {
    "skipLibCheck": true, // Due to the yarnpkg npm plugin
    "incremental": true,
    "composite": true,
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": ".",
    "tsBuildInfoFile": "build/.tsbuildinfo"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/templates/**"
  ],
}
