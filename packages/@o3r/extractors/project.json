{
  "name": "extractors",
  "$schema": "https://raw.githubusercontent.com/nrwl/nx/master/packages/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/@o3r/extractors/src",
  "prefix": "o3r",
  "targets": {
    "build": {
      "executor": "nx:run-script",
      "outputs": [
        "{projectRoot}/dist/package.json"
      ],
      "options": {
        "script": "postbuild"
      },
      "dependsOn": [
        "build-builders",
        "compile"
      ]
    },
    "prepare-build-builders": {
      "executor": "nx:run-script",
      "options": {
        "script": "prepare:build:builders"
      }
    },
    "build-builders": {
      "executor": "nx:run-script",
      "options": {
        "script": "build:builders"
      }
    },
    "compile": {
      "executor": "nx:run-script",
      "options": {
        "script": "compile"
      },
      "dependsOn": [
        "^build"
      ]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "configurations": {
        "ci": {
          "quiet": true,
          "cacheLocation": ".cache/eslint"
        }
      },
      "options": {
        "eslintConfig": "packages/@o3r/extractors/.eslintrc.js",
        "lintFilePatterns": [
          "packages/@o3r/extractors/src/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "packages/@o3r/extractors/jest.config.js",
        "silent": true
      }
    },
    "test-int": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "packages/@o3r/extractors/testing/jest.config.it.js",
        "silent": false
      }
    },
    "prepare-publish": {
      "executor": "nx:run-script",
      "options": {
        "script": "prepare:publish"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm publish packages/@o3r/extractors/dist"
      }
    },
    "documentation": {
      "executor": "nx:run-script",
      "options": {
        "script": "compodoc"
      }
    }
  },
  "tags": []
}
