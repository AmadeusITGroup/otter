{
  "extends": "../../../tsconfig.build",
  "compilerOptions": {
    "skipLibCheck": true, // Due to Jasmine / Jest fixture compilation conflicting on types
    "incremental": true,
    "outDir": "./dist",
    "rootDir": "src",
    "tsBuildInfoFile": "build/.tsbuildinfo"
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "**/*.spec.ts",
    "src/**/fixtures/**/*.ts"
  ]
}
