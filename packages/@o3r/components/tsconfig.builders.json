{
  "extends": "../../../tsconfig.build",
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "outDir": "./dist",
    "module": "CommonJS",
    "rootDir": ".",
    "tsBuildInfoFile": "build/.tsbuildinfo.builders"
  },
  "include": [
    "builders/**/*.ts",
    "schematics/**/*.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/templates/**/*.ts",
    "**/mocks/**/*.ts",
    "schematics/**/templates/**"
  ]
}
