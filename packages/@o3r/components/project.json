{
  "name": "components",
  "$schema": "https://raw.githubusercontent.com/nrwl/nx/master/packages/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/@o3r/components/src",
  "prefix": "o3r",
  "targets": {
    "build": {
      "executor": "nx:run-script",
      "outputs": ["{projectRoot}/dist/package.json"],
      "options": {
        "script": "postbuild",
        "tsConfig": "{projectRoot}/tsconfig.build.json"
      },
      "dependsOn": ["build-builders", "compile", "expose-schemas"]
    },
    "expose-schemas": {},
    "prepare": {},
    "compile": {
      "executor": "@angular-devkit/build-angular:ng-packagr",
      "options": {
        "project": "packages/@o3r/components/src/ng-package.json",
        "tsConfig": "packages/@o3r/components/tsconfig.build.json"
      },
      "dependsOn": [
        "prepare",
        "^build"
      ]
    },
    "prepare-build-builders": {},
    "build-builders": {},
    "lint": {},
    "test": {},
    "test-int": {},
    "prepare-publish": {},
    "publish": {},
    "documentation": {}
  },
  "tags": []
}
