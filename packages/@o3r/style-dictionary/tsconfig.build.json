{
  "extends": "../../../tsconfig.build",
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "rootDir": ".",
    "tsBuildInfoFile": "build/.tsbuildinfo",
    "skipLibCheck": true // Due to NodeNext module import of RxJs
  },
  "include": [
    "src/**/*.mts"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}
