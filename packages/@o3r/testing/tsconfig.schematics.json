{
  "extends": "../../../tsconfig.build",
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "outDir": "./dist",
    "module": "CommonJS",
    "rootDir": ".",
    "skipLibCheck": true, // because of @angular-devkit-schematics
    "tsBuildInfoFile": "build/.tsbuildinfo.schematics"
  },
  "include": [
    "schematics/**/*.ts"
  ],
  "exclude": [
    "schematics/**/templates/**",
    "**/*.spec.ts"
  ]
}
