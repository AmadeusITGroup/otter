{
  "$schema": "https://raw.githubusercontent.com/nrwl/nx/master/packages/nx/schemas/project-schema.json",
  "projectType": "library",
  "name": "mobile",
  "root": "packages/@o3r/mobile",
  "sourceRoot": "packages/@o3r/mobile/src",
  "prefix": "o3r",
  "targets": {
    "build": {
      "executor": "nx:noop",
      "dependsOn": ["compile"]
    },
    "compile": {
      "executor": "@angular-devkit/build-angular:ng-packagr",
      "options": {
        "project": "packages/@o3r/mobile/ng-package.json",
        "tsConfig": "packages/@o3r/mobile/tsconfig.build.json"
      },
      "dependsOn": ["^build", "build-builders"]
    },
    "build-builders": {
      "executor": "nx:run-script",
      "outputs": ["{projectRoot}/dist/pcloudy"],
      "options": {
        "script": "build:builders"
      },
      "dependsOn": ["^build"]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "configurations": {
        "ci": {
          "quiet": true,
          "cacheLocation": ".cache/eslint"
        }
      },
      "options": {
        "eslintConfig": "packages/@o3r/mobile/.eslintrc.js",
        "lintFilePatterns": ["packages/@o3r/mobile/src/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "options": {
        "jestConfig": "packages/@o3r/mobile/jest.config.js",
        "silent": true
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm publish packages/@o3r/mobile/dist"
      }
    }
  },
  "tags": []
}
