{
  "extends": "../../../tsconfig.build",
  "compilerOptions": {
    "skipLibCheck": true, // TODO: to remove when supported (ref: https://github.com/typescript-eslint/typescript-eslint/issues/8047)
    "declaration": true,
    "declarationMap": false,
    "incremental": true,
    "composite": true,
    "lib": ["es5", "es6", "scripthost"],
    "sourceMap": false,
    "types": ["node"],
    "baseUrl": ".",
    "outDir": "dist",
    "module": "CommonJS",
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}
