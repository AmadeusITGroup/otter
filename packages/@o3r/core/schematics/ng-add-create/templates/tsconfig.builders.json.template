{
  "extends": "<%= tsconfigBuildPath %>",
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "outDir": "./dist",
    "module": "CommonJS",
    "rootDir": ".",
    "tsBuildInfoFile": "build/.tsbuildinfo.builders",
    "moduleResolution": "node"
  },
  "include": [
    "builders/**/*.ts",
    "schematics/**/*.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "builders/**/templates/**",
    "schematics/**/templates/**"
  ]
}
