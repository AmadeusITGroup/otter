{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "github>kpanot/otter//tools/renovate/base",
    "github>kpanot/otter//tools/renovate/otter-project"
  ],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "baseBranches": [
    "master"
  ],
  "platform": "azure",
  "enabledManagers": [
    "npm"
  ],
  "npm": {
    "stabilityDays": 0
  },
  "labels": [
    "upgrade"
  ],
  "updateInternalDeps": true,
  "automerge": true,
  "platformAutomerge": true,
  "packageRules": [
    {
      "matchPackageNames": [
        "@o3r/*"
      ],
      "automergeType": "patch"
    }
  ]
}
