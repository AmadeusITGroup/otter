{
  "extends": "../../../tsconfig.build",
  "compilerOptions": {
    "types": [
      "node"
    ],
    "incremental": true,
    "composite": true,
    "module": "commonjs",
    "moduleResolution": "node10",
    "outDir": "./dist",
    "rootDir": ".",
    "tsBuildInfoFile": "./build/.tsbuildinfo"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}
