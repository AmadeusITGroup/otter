{
  "extends": "../../../tsconfig.build",
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": ".",
    "skipLibCheck": true, // because of @angular-devkit-schematics
    "tsBuildInfoFile": "./build/.tsbuildinfo"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}
