{
  "extends": "../../../tsconfig.jest",
  "compilerOptions": {
    "composite": true,
    "outDir": "test",
    "rootDir": ".",
    "allowImportingTsExtensions": true,
    "module": "nodenext",
    "target": "ESNext",
    "esModuleInterop": true,
    "isolatedModules": true,
