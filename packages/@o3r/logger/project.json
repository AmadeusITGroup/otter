{
  "name": "logger",
  "$schema": "https://raw.githubusercontent.com/nrwl/nx/master/packages/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/@o3r/logger/src",
  "prefix": "o3r",
  "targets": {
    "build": {
      "executor": "nx:noop",
      "dependsOn": [
        "build-builders",
        "compile"
      ]
    },
    "prepare-build-builders": {
      "executor": "nx:run-script",
      "options": {
        "script": "prepare:build:builders"
      }
    },
    "build-builders": {
      "executor": "nx:run-script",
      "options": {
        "script": "build:builders"
      }
    },
    "compile": {
      "executor": "@angular-devkit/build-angular:ng-packagr",
      "options": {
        "project": "packages/@o3r/logger/ng-package.json",
        "tsConfig": "packages/@o3r/logger/tsconfig.build.json"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "configurations": {
        "ci": {
          "quiet": true,
          "cacheLocation": ".cache/eslint"
        }
      },
      "options": {
        "eslintConfig": "packages/@o3r/logger/.eslintrc.js",
        "lintFilePatterns": [
          "packages/@o3r/logger/src/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "options": {
        "jestConfig": "packages/@o3r/logger/jest.config.js",
        "silent": true
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm publish packages/@o3r/logger/dist"
      }
    }
  },
  "tags": []
}
