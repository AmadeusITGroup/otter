{
  "name": "chrome-devtools",
  "$schema": "https://raw.githubusercontent.com/nrwl/nx/master/packages/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/@o3r/chrome-devtools/src",
  "prefix": "o3r",
  "targets": {
    "build": {
      "executor": "nx:run-script",
      "outputs": [
        "{projectRoot}/dist/manifest.json",
        "{projectRoot}/dist/extension",
        "{projectRoot}/dist/package.json",
        "{projectRoot}/dist/devtools.html"
      ],
      "options": {
        "script": "postbuild:patch"
      },
      "dependsOn": [
        "^build",
        "build-panel",
        "build-components",
        "build-extension"
      ]
    },
    "build-components": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": [
        "{projectRoot}/dist/components"
      ],
      "options": {
        "baseHref": "components",
        "outputPath": "packages/@o3r/chrome-devtools/dist/components",
        "index": "packages/@o3r/chrome-devtools/src/app-components.html",
        "main": "packages/@o3r/chrome-devtools/src/app-components.main.ts",
        "tsConfig": "packages/@o3r/chrome-devtools/tsconfig.build.components.json",
        "fileReplacements": [
          {
            "replace": "packages/@o3r/chrome-devtools/src/environments/environment.ts",
            "with": "packages/@o3r/chrome-devtools/src/environments/environment.prod.ts"
          }
        ],
        "optimization": {
          "scripts": true,
          "styles": {
            "minify": true,
            "inlineCritical": false
          },
          "fonts": true
        },
        "buildOptimizer": true,
        "polyfills": "packages/@o3r/chrome-devtools/src/polyfills.ts",
        "assets": [
          {
            "glob": "**/*",
            "input": "packages/@o3r/chrome-devtools/src/assets",
            "output": "/.."
          },
          {
            "glob": "manifest.json",
            "input": "packages/@o3r/chrome-devtools/src",
            "output": "/.."
          },
          {
            "glob": "devtools.html",
            "input": "packages/@o3r/chrome-devtools/src",
            "output": "/.."
          }
        ],
        "styles": [
          {
            "inject": true,
            "input": "packages/@o3r/chrome-devtools/src/styles/index.scss"
          }
        ],
        "sourceMap": {
          "styles": true,
          "scripts": true,
          "vendor": true
        },
        "preserveSymlinks": true,
        "serviceWorker": false,
        "extractLicenses": false,
        "aot": true
      },
      "configurations": {
        "dev": {
          "baseHref": "components",
          "outputPath": "packages/@o3r/chrome-devtools/dist/components",
          "index": "packages/@o3r/chrome-devtools/src/app-components.html",
          "main": "packages/@o3r/chrome-devtools/src/app-components.main.ts",
          "tsConfig": "packages/@o3r/chrome-devtools/tsconfig.build.components.json",
          "aot": false,
          "optimization": false,
          "buildOptimizer": false
        }
      },
      "dependsOn": [
        "^build"
      ]
    },
    "build-panel": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": [
        "{projectRoot}/dist/panel"
      ],
      "options": {
        "baseHref": "panel",
        "outputPath": "packages/@o3r/chrome-devtools/dist/panel",
        "index": "packages/@o3r/chrome-devtools/src/app-devtools.html",
        "main": "packages/@o3r/chrome-devtools/src/app-devtools.main.ts",
        "tsConfig": "packages/@o3r/chrome-devtools/tsconfig.build.devtools.json",
        "fileReplacements": [
          {
            "replace": "packages/@o3r/chrome-devtools/src/environments/environment.ts",
            "with": "packages/@o3r/chrome-devtools/src/environments/environment.prod.ts"
          }
        ],
        "optimization": {
          "scripts": true,
          "styles": {
            "minify": true,
            "inlineCritical": false
          },
          "fonts": true
        },
        "buildOptimizer": true,
        "polyfills": "packages/@o3r/chrome-devtools/src/polyfills.ts",
        "assets": [
          {
            "glob": "**/*",
            "input": "packages/@o3r/chrome-devtools/src/assets",
            "output": "/.."
          },
          {
            "glob": "manifest.json",
            "input": "packages/@o3r/chrome-devtools/src",
            "output": "/.."
          },
          {
            "glob": "devtools.html",
            "input": "packages/@o3r/chrome-devtools/src",
            "output": "/.."
          }
        ],
        "styles": [
          {
            "inject": true,
            "input": "packages/@o3r/chrome-devtools/src/styles/index.scss"
          }
        ],
        "sourceMap": {
          "styles": true,
          "scripts": true,
          "vendor": true
        },
        "preserveSymlinks": true,
        "serviceWorker": false,
        "extractLicenses": false,
        "aot": true
      },
      "configurations": {
        "dev": {
          "baseHref": "panel",
          "outputPath": "packages/@o3r/chrome-devtools/dist/panel",
          "index": "packages/@o3r/chrome-devtools/src/app-devtools.html",
          "main": "packages/@o3r/chrome-devtools/src/app-devtools.main.ts",
          "tsConfig": "packages/@o3r/chrome-devtools/tsconfig.build.devtools.json",
          "aot": false,
          "optimization": false,
          "buildOptimizer": false
        }
      },
      "dependsOn": [
        "^build"
      ]
    },
    "build-extension": {
      "executor": "nx:run-script",
      "outputs": [
        "{projectRoot}/dist/extension"
      ],
      "options": {
        "script": "build:extension"
      },
      "dependsOn": [
        "^build"
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "configurations": {
        "ci": {
          "quiet": true,
          "cacheLocation": ".cache/eslint"
        }
      },
      "options": {
        "eslintConfig": "packages/@o3r/chrome-devtools/.eslintrc.js",
        "lintFilePatterns": [
          "packages/@o3r/chrome-devtools/src/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "options": {
        "jestConfig": "packages/@o3r/chrome-devtools/jest.config.js",
        "silent": true
      }
    },
    "prepare-publish": {
      "executor": "nx:run-script",
      "options": {
        "script": "prepare:publish"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm publish packages/@o3r/chrome-devtools/dist"
      }
    }
  },
  "tags": []
}
