{
  "extends": "./tsconfig.build",
  "compilerOptions": {
    "types": [
      "node",
      "jest"
    ],
    "rootDir": "src",
    "emitDeclarationOnly": true,
    "tsBuildInfoFile": "build/.tsbuildinfo.jest",
    "incremental": true,
    "outDir": "./dist"
  },
  "include": ["src/**/fixtures/jest/**/*.ts"],
  "exclude": ["**/*.spec.ts"],
}
