{
  "extends": "../../../tsconfig.build",
  "compilerOptions": {
    "types": [
      "jasmine",
      "jest"
    ],
    "skipLibCheck": true, // Due to Jasmine / Jest fixture compilation conflicting on types
    "outDir": "./dist",
    "rootDir": "src",
    "moduleResolution": "bundler"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "src/**/fixtures/**/*.ts",
    "**/templates/**/*.ts",
    "**/mocks/**/*.ts"
  ]
}
