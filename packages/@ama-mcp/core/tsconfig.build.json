{
  "extends": "../../../tsconfig.build",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "module": "commonjs",
    "moduleResolution": "node10",
    "types": ["node"],
    "lib": ["ES2024"],
    "tsBuildInfoFile": "build/.tsbuildinfo",
    "skipLibCheck": true // because of @modelcontextprotocol-sdk
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.spec.ts"]
}
