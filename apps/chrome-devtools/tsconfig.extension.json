{
  "extends": "../../tsconfig.build",
  "compilerOptions": {
    "mapRoot": "./src",
    "incremental": true,
    "lib": ["es2021", "dom"],
    "types": ["chrome"],
    "outDir": "dist",
    "rootDir": "./src",
    "module": "ES2020",
    "moduleResolution": "Node",
    "tsBuildInfoFile": "build/extension.tsbuildinfo",
    "composite": true
  },
  "include": [
    "src/extension/**/*.ts",
    "src/shared/**/*.ts",
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}
