{
  "servers": {
    "nx": {
      "type": "stdio",
      "command": "npx",
      "args": ["nx-mcp"]
    },
    "angular": {
      "command": "npx",
      "args": ["@angular/cli", "mcp"]
    },
    "o3r": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "-p", "@o3r/mcp", "o3r-mcp-start"]
    },
    "o3r-local": {
      "command": "yarn",
      "args": [
        "node",
        "./tools/@o3r/mcp/dist/cli/index.js"
      ]
    },
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp"
      ]
    }
  }
}
