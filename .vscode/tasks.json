// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "start demo app",
      "type": "npm",
      "script": "start",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "watch-vscode-extension",
      "type": "shell",
      "command": "pnpx nx run vscode-extension:compile:watch",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build"
      }
    }
  ]
}
